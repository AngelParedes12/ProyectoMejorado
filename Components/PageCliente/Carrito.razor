@page "/carrito"
@using ProyectoMejorado.Components.Models
@using ProyectoMejorado.Components.Services
@inject CarritoService carritoService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Carrito</PageTitle>

<h3 class="text-primary mb-4 text-center">
    <i class="bi bi-cart4 me-2"></i> Carrito de Compras
</h3>

@if (!items.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle-fill me-2"></i> Tu carrito está vacío.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in items)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body d-flex flex-column gap-3">
                        <div class="d-flex gap-3 align-items-center">
                            @if (!string.IsNullOrEmpty(item.ImagenUrl))
                            {
                                <img src="@item.ImagenUrl" class="rounded-3 border" style="width: 80px; height: 80px; object-fit: cover;" />
                            }

                            <div class="flex-fill">
                                <h6 class="fw-bold mb-1">@item.Nombre</h6>
                                <p class="text-muted mb-0 small">Precio: <strong>RD$ @item.Precio</strong></p>
                                <p class="text-muted small">Subtotal: <strong>RD$ @(item.Precio * item.Cantidad)</strong></p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div class="btn-group" role="group">
                                <button class="btn btn-outline-secondary" title="Disminuir" @onclick="@(() => Disminuir(item.ProductoId))">
                                    <i class="bi bi-dash-lg"></i>
                                </button>

                                <button class="btn btn-outline-primary" disabled style="min-width: 50px;">
                                    @item.Cantidad
                                </button>

                                <button class="btn btn-outline-secondary" title="Aumentar" @onclick="@(() => Aumentar(item.ProductoId))">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            </div>

                            <button class="btn btn-outline-danger rounded-circle ms-2" title="Eliminar" @onclick="@(() => QuitarItem(item.ProductoId))" style="width: 36px; height: 36px;">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-5 d-flex justify-content-between align-items-center flex-wrap border-top pt-4">
        <h5 class="fw-bold text-success mb-3 mb-md-0">
            <i class="bi bi-cash-stack me-1"></i> Total: RD$ @total
        </h5>
        <button class="btn btn-success btn-lg rounded-pill px-4" @onclick="ContinuarCompra">
            <i class="bi bi-credit-card me-2"></i> Proceder al Pago
        </button>
    </div>
}

@code {
    private List<ItemCarrito> items = new();
    private decimal total = 0;

    protected override void OnInitialized()
    {
        CargarDatos();
    }

    private void CargarDatos()
    {
        items = carritoService.ObtenerItems().ToList();
        total = carritoService.ObtenerTotal();
    }

    private void Aumentar(int id)
    {
        carritoService.AumentarCantidad(id);
        CargarDatos();
    }

    private void Disminuir(int id)
    {
        carritoService.DisminuirCantidad(id);
        CargarDatos();
    }

    private void QuitarItem(int id)
    {
        carritoService.Quitar(id);
        CargarDatos();
    }

    private void ContinuarCompra()
    {
        Navigation.NavigateTo("/checkout");
    }
}
