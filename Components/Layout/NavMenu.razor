@implements IDisposable
@inject NavigationManager NavigationManager

<div class="sidebar">
    <div class="brand">
        <i class="bi bi-stars me-2"></i>
        <span class="brand-text">ProyectoMejorado</span>
    </div>

    <nav class="nav flex-column">
        <!-- Tienda visible para todos -->
        <NavLink class="nav-link" href="/tienda">
            <i class="bi bi-shop-window me-2"></i> <span>Tienda</span>
        </NavLink>

        <!-- Panel de Control -->
        <AuthorizeView Roles="Admin,Empleado,Tecnico" Context="panelContext">
            <div class="nav-section">
                <i class="bi bi-clipboard me-2"></i>Panel de Control
            </div>

            <NavLink class="nav-link" href="/admin/dashboard">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </NavLink>

            <NavLink class="nav-link" href="/admin/ordenes">
                <i class="bi bi-tools me-2"></i> Órdenes
            </NavLink>

            <NavLink class="nav-link" href="/admin/pedidos">
                <i class="bi bi-truck me-2"></i> Pedidos
            </NavLink>

            <NavLink class="nav-link" href="/admin/productos/crear">
                <i class="bi bi-plus-circle-dotted me-2"></i> Nuevo Producto
            </NavLink>

            <NavLink class="nav-link" href="/admin/ajustar-stock">
                <i class="bi bi-boxes me-2"></i> Inventario
            </NavLink>

            <NavLink class="nav-link" href="/admin/usuarios">
                <i class="bi bi-people-fill me-2"></i> Usuarios
            </NavLink>

            <NavLink class="nav-link" href="/admin/registrar-empleado">
                <i class="bi bi-person-plus me-2"></i> Nuevo Usuario
            </NavLink>

            <!-- Técnico -->
            <AuthorizeView Roles="Admin,Tecnico" Context="tecnicoContext">
                <NavLink class="nav-link" href="/tecnico/ordenes">
                    <i class="bi bi-clipboard-check me-2"></i> Mis Órdenes
                </NavLink>
            </AuthorizeView>

            <!-- Empleado -->
            <AuthorizeView Roles="Empleado,Admin" Context="empleadoContext">
                <NavLink class="nav-link" href="/empleado/registrar-orden">
                    <i class="bi bi-wrench-adjustable-circle me-2"></i> Nueva Orden
                </NavLink>
            </AuthorizeView>
        </AuthorizeView>

        <!-- Cuenta -->
        <AuthorizeView Context="cuentaUsuario">
            <Authorized>
                <div class="nav-section">
                    <i class="bi bi-person me-2"></i>Cuenta
                </div>

                <NavLink class="nav-link" href="Account/Manage">
                    <i class="bi bi-person-circle me-2"></i> @cuentaUsuario.User.Identity?.Name
                </NavLink>

                <NavLink class="nav-link" href="/mis-pedidos">
                    <i class="bi bi-journal-check me-2"></i> Mis Pedidos
                </NavLink>

                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link btn btn-link text-start w-100">
                        <i class="bi bi-box-arrow-left me-2"></i> Cerrar Sesión
                    </button>
                </form>
            </Authorized>
            <NotAuthorized>
                <div class="nav-section">
                    <i class="bi bi-lock me-2"></i>Acceso
                </div>

                <NavLink class="nav-link" href="Account/Register">
                    <i class="bi bi-person-plus-fill me-2"></i> Registrarse
                </NavLink>

                <NavLink class="nav-link" href="Account/Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}