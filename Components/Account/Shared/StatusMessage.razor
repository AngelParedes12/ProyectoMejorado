@* Componente reutilizable para mostrar mensajes de estado *@

@if (!string.IsNullOrEmpty(Message))
{
    var statusClass = Message.StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusClass text-center fw-semibold" role="alert">
        @Message
    </div>
}

@code {
    [Parameter]
    public string? Message { get; set; }
}
